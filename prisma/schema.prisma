generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  userId                String @id @default(uuid())
  nickname              String @unique
  email                 String @unique
  favoriteTheme         String
  favoriteSecondTheme   String
  password              String
  workspace             Workspace[]
}

model Workspace {
  workspaceId String @id @default(uuid())
  name        String
  icon        String
  link        String
  blocks      Json

  userId      String
  user        User @relation(fields: [userId], references: [userId], onDelete: Cascade)
}